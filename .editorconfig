# EditorConfig is awesome: https://EditorConfig.org
# This file helps maintain consistent code style across all editors

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4

[*.{tf,tfvars,hcl}]
indent_size = 2

[*.{yml,yaml,json}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Justfile,justfile]
indent_style = space
indent_size = 4

[*.sh]
indent_size = 2

[Makefile,makefile]
indent_style = tab

[.env,.env.*,.envrc]
indent_size = 2

[.github/workflows/*.{yml,yaml}]
indent_size = 2
